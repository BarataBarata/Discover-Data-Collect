<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sgsgsgs"
    android:layout_height="match_parent"
    tools:context=".startDiscover">


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/gg"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="81dp"
            app:cardElevation="81dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/im"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="590dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cont"
            android:textColor="@color/white"
            android:layout_alignRight="@id/progress"
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:layout_alignStart="@id/progress"
            android:text="Carregando..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:layout_marginTop="20dp"
            android:id="@+id/progress"
            android:progressBackgroundTint="#2B1B20"
            android:progressTint="@color/white"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_height="wrap_content"/>


    </RelativeLayout>



